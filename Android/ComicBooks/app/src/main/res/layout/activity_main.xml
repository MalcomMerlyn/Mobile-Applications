<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mycolor"
    tools:context="com.example.mihai.comicbooks.MainActivity">

    <ListView
        android:id="@+id/listTopics"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@color/itemBackgroundAddButton"
        android:text="Add Event"
        app:layout_constraintEnd_toEndOf="@+id/listTopics"
        app:layout_constraintStart_toStartOf="@+id/listTopics"
        app:layout_constraintTop_toBottomOf="@+id/listTopics" />
</android.support.constraint.ConstraintLayout>